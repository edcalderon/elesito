{{>headdashboard}}

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar-->
    {{#if administrador}}
    {{>sidebardashboard}}
    {{/if}}
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        {{>topbar}}
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">
          {{#if administrador}}
          <a class="dropdown-item" href="/register">
            <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
            Registrar mas usuarios
          </a>
          {{/if}}
          {{#if resultshow}}
          <div class="alert alert-info alert-dismissable">
            <a class="panel-close close" data-dismiss="alert">Ã—</a>
            <i class="fa fa-coffee"></i>
            <strong>{{resultshow}}</strong>.
          </div>
          {{/if}}
          {{#if administrador}}
          <div class="card">
            {{#if listar}}
            <div class="card-body">
              <div class="limiter">
                <div class="container-table100">
                  <div class="wrap-table100">
                    <div class="row">
                      <form action="/dashboardadmin?listar=true" method="post">
                        <div class="form-row">
                          <div class="col "><input type="text" name="busqueda" placeholder="editar por cedula"></div>
                          <div class="col "><button type="submit" class="btn btn-primary"> buscar </button></div>
                        </div>
                      </form>
                    </div>
                    <br></br>
                    {{>usersadmintable}}
                  </div>
                </div>
              </div>
            </div>
            {{/if}}
            {{#if registrar}}
            {{>registroarticulos}}
            {{/if}}
            {{#if listararticulos}}
            {{>listararticulos}}
            {{/if}}
            {{#if checkout}}
            {{>checkoutcart}}
            {{/if}}
          </div>
        </div>
        <!-- /.container-fluid -->

        {{else}}
        {{>noaccess}}
        {{/if}}
      </div>
      <!-- End of Main Content -->
      <!-- Footer -->
      {{>footerdashboard}}
    </div>
    <!-- End of Content Wrapper -->
  </div>
  <!-- End of Page Wrapper -->
</body>

</html>
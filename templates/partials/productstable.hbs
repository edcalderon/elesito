<div class="card-body">
  <h4 class="card-title">Gestion de productos</h4>
  <div class="table-responsive">
    <div id="DataTables_Table_1_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
      <div class="row">
        <div class="col-sm-12 col-md-6">
          <div class="dataTables_length" id="DataTables_Table_1_length"></div>
        </div>
        <div class="col-sm-12 col-md-6">
          <div id="DataTables_Table_1_filter" class="dataTables_filter"></div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12"></div>
        <table class="table table-striped table-bordered text-inputs-searching dataTable" id="DataTables_Table_1" role="grid" aria-describedby="DataTables_Table_1_info">
          <thead>
            <tr role="row">
              <th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width: 0px;" aria-label="Office: activate to sort column ascending">Nombre</th>
              <th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width: 0px;" aria-label="Start date: activate to sort column ascending">Precio</th>
              <th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width: 0px;" aria-label="Start date: activate to sort column ascending">Ciudad</th>
              <th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width: 0px;" aria-label="Salary: activate to sort column ascending">Editar</th>
            </tr>
          </thead>
          <tbody>
            {{{listarProductos productos}}}

          </tbody>
          <tfoot>
            <tr>
              <th rowspan="1" colspan="1"><input type="text" placeholder="Search Office"></th>
              <th rowspan="1" colspan="1"><input type="text" placeholder="Search Age"></th>
              <th rowspan="1" colspan="1"><input type="text" placeholder="Search Start date"></th>
              <th rowspan="1" colspan="1"><input type="text" placeholder="Search Salary"></th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12 col-md-5">
        <div class="dataTables_info" id="DataTables_Table_1_info" role="status" aria-live="polite"></div>
      </div>
      <div class="col-sm-12 col-md-7">
        <div class="dataTables_paginate paging_simple_numbers" id="DataTables_Table_1_paginate"></div>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form action="dashboardeditararticulo" enctype="multipart/form-data" method="POST">
                        <div class="form-body">
                            <h5 class="card-title">Acerca del producto</h5>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Nombre</label>
                                        <input type="text" id="firstName" name="nombre" class="form-control" value='{{nombre}}' required>                                        
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Codigo</label>
                                        <input type="text" id="codigo" name="codigo" class="form-control" value='{{codigo}}' readonly="readonly">                                        
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Categoria</label>
                                        <select class="form-control" name="categoria" data-placeholder="Elige una Categoria" value='{{categoria}}' tabindex="1" required>
                                            <option value="" selected>Elige una Categoria</option>
                                            <option value="Tecnologia">Tecnologia</option>
                                            <option value="Mercado">Mercado</option>
                                            <option value="Electrodomesticos">Electrodomesticos</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Cantidad</label>
                                        <input type="number" id="cantidad" name="cantidad" class="form-control" value='{{cantidad}}'>
                                    </div>

                                </div>
                                
                                <div class="col-md-6">
                                    <label>Precio</label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon1">$</span>
                                        </div>
                                        <input type="text" class="form-control" name="precio" value='{{precio}}' aria-label="price" aria-describedby="basic-addon1" required>
                                    </div>                                        
                                </div>
                                <!--/span-->
                                <div class="col-md-6">
                                    <label>Descuento</label>
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text" id="basic-addon2">$</span>
                                        </div>
                                        <input type="number" class="form-control" name="descuento" value='{{descuento}}' aria-label="Discount" aria-describedby="basic-addon2">
                                    </div>
                                </div>
                                    <!--/span-->
                                
                                <div class="col-md-12 ">
                                    <label>Descripcion del producto</label>
                                    <div class="form-group">
                                        <textarea class="form-control" name="descripcion" rows="4" value='{{descripcion}}' placeholder="{{descripcion}}"></textarea>
                                    </div>
                                </div>
                                
                                <!--/row-->
                                
                                <!--/span-->
                                
                                <div class="col-md-6">
                                    <h5 class="card-title m-t-20">Imagen del Producto</h5>
                                    <div class="el-element-overlay">
                                        <div class="el-card-item">
                                            <div class="el-card-avatar el-overlay-1">
                                                <img src="data:img/jpeg;base64,{{imagen}}"/>
                                            </div>
                                        </div>
                                    </div>
                                    <br>
                                    <div class="input-group">
                                        <div class="btn btn-info waves-effect waves-light"><span>Cargar otra Imagen</span>
                                            <input type="file" name="imagenProducto" accept="image/*" class="upload" required>
                                        </div>
                                    </div>
                                </div>
                                <hr>

                            </div>
                            <br>
                            <div class="form-actions m-t-40">
                                <input type="hidden" id="id" name="id" value='{{id}}'>
                                <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i>Guardar</button>

                                <a href="/dashboardproducts" type="button" class="btn btn-dark">Cancelar</a>
                            </div>
                    </form>
                    </div>
                </div>
            </div>
            <!-- Column -->
        </div>
    </div>
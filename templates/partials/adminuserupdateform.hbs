<form action="/dashboardupdateuser" method="post">
	<div class="form-row">
		<div class="col form-group">
			<label>Nombre </label>
		  	<input type="text"  class="form-control" name="firstnameUser" value={{firstnameUser}}>
		</div>
		<div class="col form-group">
			<label>Apellidos</label>
		  	<input type="text" class="form-control" name="lastnameUser" value={{lastnameUser}}>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
		  <label>Telefono</label>
		  <input type="text" class="form-control" name="phoneUser" value={{phoneUser}}>
		</div>
		<div class="form-group col-md-6">
		  <label>Roll</label>
		  <select id="inputState" class="form-control" name="rollUser" value={{rollUser}}>
				<option>gerente</option>
				<option>bodeguero</option>
				<option>cajero</option>
				<option selected="">{{rollUser}}</option>
		  </select>
		</div>
	</div>
	<div class="form-row">
		<div class="form-group col-md-6">
		  <label>Usuario</label>
		  <input type="text" class="form-control" name="user" value={{user}}>
		</div>
		<div class="form-group col-md-6">
		  <label>Sede</label>
		  <input type="text" class="form-control" name="sedeUser" value={{sedeUser}}>
		</div>
	</div>
  <div class="form-row">
		<div class="form-group col-md-6">
		  <label>Cedula*</label>
		  <input type="text" class="form-control" name="ccUser" value={{ccUser}}>
		</div>
    <div class="form-group col-md-6">
		  <label>Correo*</label>
		  <input type="text" class="form-control" name="emailUser" value={{emailUser}}>
		</div>
    <small class="text-muted"> * Cedula y Correo son identificadores únicos y sólo podran ser modificados por el administrador del sistema. </small>
	</div>

    <div class="form-group">
        <br>
        <button type="submit" class="btn btn-primary btn-block"> Modificar </button>
    </div> <!-- form-group// -->
    <i><small class="text-muted">Recuerda <br> "Un Gran poder conlleva una Gran responsabilidad" <br> Tio Ben.</small> </i>
</form>
